{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "protractor": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "angular": true,
    "GATEWAY_URL": true,
    "FEATURE_FLAGS": true,
    "LANGUAGES": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "json"
  ],
  "rules": {
    "eol-last": [
      "error",
      "always"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "no-trailing-spaces": "error",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}